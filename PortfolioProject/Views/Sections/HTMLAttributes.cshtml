@model PortfolioProject.Models.SectionsBookmarksViewModel

@{
    ViewData["Title"] = "HTML Attributes";
}

<div class="container">
    <header class="header">
        <h1>HTML Attributes</h1>
    </header>
</div>

<div class="container">
    <!-- The left sidebar -->
    <div class="sidebar left">
        <h2>HTML Sections</h2>
        <ul>
            @{
                // If there are no sections
                if (@Model?.Sections == null)
                {
                    <li>
                        No sections to display!
                    </li>
                }
                else
                {
                    // For every section that needs to be displayed
                    foreach (Section s in @Model?.Sections)
                    {
                        // Creates a clickable that takes you to the specified section
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Sections" asp-action="@s.SectionName">@s.SectionDisplay</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>

    <!-- Section for most webpage content -->
    <div class="content">
        <h2>What are HTML Attributes?</h2>
        <p>
            HTML attributes provide additional information about an HTML element. 
            They are used to configure the behavior or appearance of elements and are always placed within the opening tag of an element. 
            Attributes define properties like a link’s destination, an image's source, or a form element's placeholder text.
        </p>
        <p>Common HTML Attributes include:</p>
        <ul>
            <li>href (for links)</li>

            <li>src (for images)</li>

            <li>alt (for images)</li>

            <li>class (for styling and JavaScript)</li>

            <li>id (for unique identification)</li>

            <li>style (for inline styling)</li>

            <li>And more! (Will be added soon!)</li>
        </ul>

        <p>
            Understanding how to use HTML attributes effectively is key to controlling how elements look and behave on your webpage.
        </p>
    </div>

    <!-- The right sidebar -->
    <div class="sidebar right">
        <h2>Bookmarks Sidebar</h2>
        <ul>
            @{
                // If there are no bookmarks
                if (@Model?.Bookmarks == null)
                {
                    <li>
                        No bookmarks to display!
                    </li>
                }
                else
                {
                    // For every bookmark that needs to be displayed
                    foreach (Bookmark b in @Model?.Bookmarks)
                    {
                        // Creates a clickable that takes you to the specified bookmark
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Sections" asp-action="@b.BookmarkName">@b.BookmarkDisplay</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>