@model PortfolioProject.Models.SectionsBookmarksViewModel

@{
    ViewData["Title"] = "CSS Introduction";
}

<div class="container">
    <header class="header">
        <h1>CSS Introduction</h1>
    </header>
</div>

<div class="container">
    <!-- The left sidebar -->
    <div class="sidebar left">
        <h2>CSS Sections</h2>
        <ul>
            @{
                // If there are no sections
                if (@Model?.Sections == null)
                {
                    <li>
                        No sections to display!
                    </li>
                }
                else
                {
                    // For every section that needs to be displayed
                    foreach (Section s in @Model?.Sections)
                    {
                        // Creates a clickable that takes you to the specified section
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Sections" asp-action="@s.SectionName">@s.SectionDisplay</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>

    <!-- Section for most webpage content -->
    <div class="content">
        <h2>What is CSS?</h2>
        <p>
            CSS (Cascading Style Sheets) is a styling language used to define the look and feel of a website or web application. 
            It works alongside HTML (which structures the content) to create visually engaging layouts by specifying how HTML elements should appear on the screen.
        </p>
        <p>
            With CSS, you can control various visual aspects, such as:
        </p>

        <ol>
            <li>
                Colors: Set the color of text, backgrounds, and other elements.
            </li>
            <li>
                Fonts: Choose the type, size, and style of text.
            </li>
            <li>
                Spacing: Control margins, padding, and the distance between elements.
            </li>
            <li>
                Layout: Position elements in a grid, flexbox, or other layout models.
            </li>
            <li>
                Borders: Customize the thickness, style, and color of borders.
            </li>
            <li>
                Animations and Transitions: Add movement or changes in elements when users interact with them.
            </li>
        </ol>

        <p> (Add Examples later!)</p>
    </div>

    <!-- The right sidebar -->
    <div class="sidebar right">
        <h2>Bookmarks Sidebar</h2>
        <ul>
            @{
                // If there are no bookmarks
                if (@Model?.Bookmarks == null)
                {
                    <li>
                        No bookmarks to display!
                    </li>
                }
                else
                {
                    // For every bookmark that needs to be displayed
                    foreach (Bookmark b in @Model?.Bookmarks)
                    {
                        // Creates a clickable that takes you to the specified bookmark
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Sections" asp-action="@b.BookmarkName">@b.BookmarkDisplay</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>